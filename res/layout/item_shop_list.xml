<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/x_bg2"
    android:orientation="vertical"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_shop_list_tv_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号: 20151234"
            android:textColor="#4D2B0A"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_shop_list_tv_ordertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待支付"
            android:textColor="#4D2B0A"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_shop_list_tv_ordertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下单时间： 2015-12-31 16： 00"
        android:textColor="#724D01"
        android:textSize="14sp" />

    <com.cpic.rabbitfarm.view.MyGridView
        android:id="@+id/item_shop_list_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="4" >
    </com.cpic.rabbitfarm.view.MyGridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            style="@style/market_tv_style"
            android:text="共" />

        <TextView
            android:id="@+id/item_shop_list_tv_count"
            style="@style/market_tv_style"
            android:text="10" />

        <TextView
            style="@style/market_tv_style"
            android:text="件商品" />

        <TextView
            style="@style/market_tv_style"
            android:layout_marginLeft="5dp"
            android:text="合计" />

        <TextView
            android:id="@+id/item_shop_list_tv_money"
            style="@style/market_tv_style"
            android:text="10"
            android:textColor="#981213" />

        <TextView
            style="@style/market_tv_style"
            android:text="兔币" />

        <Button
            android:id="@+id/item_shop_list_btn_pay"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/pay_btn_gopay" />

        <Button
             android:id="@+id/item_shop_list_btn_del"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/pay_btn_del" />
    </LinearLayout>

</LinearLayout>