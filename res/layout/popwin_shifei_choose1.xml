<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <ImageView
        android:id="@+id/popwin_shifei_choose1_iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="8dp"
        android:src="@drawable/b_bgsmall" />

    <ImageView
        android:id="@+id/popwin_shifei_choose1_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/popwin_shifei_choose1_iv_bg"
        android:layout_alignTop="@+id/popwin_shifei_choose1_iv_bg"
        android:src="@drawable/close" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/popwin_shifei_choose1_iv_bg"
        android:layout_alignTop="@+id/popwin_shifei_choose1_iv_bg"
        android:layout_margin="40dp"
        android:src="@drawable/choose2" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/popwin_shifei_choose1_iv_fei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/n_njf"
            />

        <ImageView
            android:id="@+id/popwin_shifei_choose1_iv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/b_jian" />

        <com.cpic.rabbitfarm.fonts.CatTextView
            android:id="@+id/popwin_shifei_choose1_tv_count"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/b_medium"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="1"
            android:layout_margin="5dp"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/popwin_shifei_choose1_iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/b_jia" />

           <ImageView
            android:id="@+id/popwin_shifei_choose1_iv_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/kuaidi"
            />
    </LinearLayout>

    <Button
        android:id="@+id/popwin_shifei_choose1_btn_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/popwin_shifei_choose1_iv_bg"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shifei_ensure" />

</RelativeLayout>