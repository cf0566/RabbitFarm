<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/popwin_user_info_record_iv_bg"
        android:layout_width="360dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/wjxx_bg"
        android:orientation="vertical" >

        <ListView 
             android:id="@+id/popwin_user_info_record_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="5dp"
            android:divider="#FCDC85"
            android:scrollbars="none"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            ></ListView>
    </LinearLayout>

    <ImageView
        android:id="@+id/popwin_user_info_record_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/popwin_user_info_record_iv_bg"
        android:layout_marginLeft="95dp"
        android:layout_toRightOf="@+id/popwin_user_info_record_iv_title"
        android:src="@drawable/close" />

    <ImageView
        android:id="@+id/popwin_user_info_record_iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/popwin_user_info_record_iv_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/czjl" />

</RelativeLayout>