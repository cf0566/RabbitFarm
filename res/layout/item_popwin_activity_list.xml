<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/x_bg2"
    android:orientation="horizontal" >

    <ImageView
        style="@style/message_item_img"
        android:src="@drawable/icon1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_activity_main_tv_title"
            style="@style/message_item_tv_title"
            android:text="活动" />

        <TextView
            android:id="@+id/item_activity_main_tv_content"
            style="@style/message_item_tv_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="@string/message_activity_toast" />
    </LinearLayout>

</LinearLayout>