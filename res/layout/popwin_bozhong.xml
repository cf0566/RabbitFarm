<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
     >
	
    <ImageView 
        android:id="@+id/popwin_bozhong_iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b_bg"
        android:layout_centerInParent="true"
        android:padding="10dp"
        />
    
    
    <ImageView
         android:id="@+id/popwin_bozhong_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/popwin_bozhong_iv_bg"
        android:layout_alignRight="@+id/popwin_bozhong_iv_bg"
        android:src="@drawable/close" />
    
    <ImageView 
         android:id="@+id/popwin_bozhong_iv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/choose2"
        android:layout_alignTop="@+id/popwin_bozhong_iv_bg"
        android:layout_alignLeft="@+id/popwin_bozhong_iv_bg"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        />
    <ListView 
        android:id="@+id/popwin_bozhong_lv"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:layout_below="@+id/popwin_bozhong_iv_choose"
        android:divider="@null"
        ></ListView>
    
    <Button 
         android:id="@+id/popwin_bozhong_btn_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popwin_bozhong_lv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/shifei_ensure_seed"
        />

</RelativeLayout>
