<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/popwin_user_info_iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/wjxx_bg"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/spbgsc"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tubi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢乐兔币"
                    android:textColor="#85531E"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="¥1元/个"
                    android:textColor="#85531E"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/popwin_buy_rabbit_coin_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/popwin_buy_rabbit_coin_ivdel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jb_jian" />

                    <com.cpic.rabbitfarm.fonts.CarttonEditView
                        android:id="@+id/popwin_buy_rabbit_coin_et_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/shuzi1"
                        android:gravity="center"
                        android:numeric="integer"
                        android:shadowColor="#442204"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:text="0"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/popwin_buy_rabbit_coin_ivadd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jb_jia" />
                </LinearLayout>

                <com.cpic.rabbitfarm.fonts.FishTextView
                    android:id="@+id/popwin_buy_rabbit_coin_tv_sucess_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#3A230A"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:text="共计：99个"
                     android:visibility="gone"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/gr_tmbj"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/popwin_buy_rabbit_coin_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择支付方式:"
                android:textColor="#86511B"
                android:textSize="15sp" />

            <RadioGroup
               android:id="@+id/popwin_buy_rabbit_coin_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/rbtn_pay_type"
                    android:checked="true"
                    android:text="支付宝支付"
                    android:textColor="#84511A"
                    android:textSize="13sp" />
            </RadioGroup>
            
            <TextView
                 android:id="@+id/popwin_buy_rabbit_coin_tv_buy_some"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您已成功购买兔币99个"
                android:visibility="gone"
                android:textColor="#86511B"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/popwin_buy_rabbit_coin_tv_buy_zong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的兔币总额为800个"
                android:layout_marginTop="10dp"
                android:textColor="#86511B"
                android:visibility="gone"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <com.cpic.rabbitfarm.fonts.FishTextView
                android:id="@+id/popwin_buy_rabbit_coin_tv_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#3A230A"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="合计：99元"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/popwin_buy_rabbit_coin_btn_ensure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/buy_rabbit_coin_btn_ensure" />
            
            <Button
                android:id="@+id/popwin_buy_rabbit_coin_btn_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/buy_rabbit_coin_btn_look" />
            
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/popwin_buy_rabbit_coin_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/popwin_user_info_iv_bg"
        android:layout_marginLeft="85dp"
        android:layout_toRightOf="@+id/popwin_buy_rabbit_coin_iv_title"
        android:src="@drawable/close" />

    <ImageView
        android:id="@+id/popwin_buy_rabbit_coin_iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/popwin_user_info_iv_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/jb_gmjbt" />

</RelativeLayout>