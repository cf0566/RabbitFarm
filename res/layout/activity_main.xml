<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

      <ScrollView
        android:id="@+id/sv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" 
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/activity_main_iv_bg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
               />
            
        </FrameLayout>
    </ScrollView>
      <ScrollView
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" 
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/activity_main_iv_bg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
               />
            
        </FrameLayout>
    </ScrollView>
            
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/activity_main_iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="417dp"
                android:orientation="horizontal" >

                <com.cpic.rabbitfarm.fonts.PaperTextView
                    android:id="@+id/activity_main_tv_farmname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.45"
                    android:gravity="center_horizontal"
                    android:text="农场之家"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="458dp"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.cpic.rabbitfarm.fonts.PaperTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.95"
                    android:gravity="center_horizontal"
                    android:text="待开发"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="450dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/activity_main_iv4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/miao" />

                <ImageView
                    android:id="@+id/activity_main_iv5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/miao" />

                <ImageView
                    android:id="@+id/activity_main_iv6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/miao" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="490dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/activity_main_iv1"
                     android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/miao" />

                <ImageView
                    android:id="@+id/activity_main_iv2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/miao" />

                <ImageView
                    android:id="@+id/activity_main_iv3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/miao" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/i_photobg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp" >

                <com.cpic.rabbitfarm.utils.RoundImageView
                    android:id="@+id/activity_main_iv_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/energyicon_bg"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="29dp"
                    android:paddingTop="6.5dp" >

                    <com.cpic.rabbitfarm.utils.MySeekBar
                        android:id="@+id/activity_main_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
                        android:indeterminateOnly="false"
                        android:max="10"
                        android:progressDrawable="@drawable/progress_loading2"
                        android:thumb="@null" />
                </LinearLayout>

                <TextView
                    android:id="@+id/activity_main_tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_seekbar"
                    android:layout_toRightOf="@+id/ll_icon"
                    android:text="天使遇到鬼"
                    android:textColor="@color/user_name"
                    android:textSize="18sp" />
            </LinearLayout>

            <com.cpic.rabbitfarm.fonts.NormalTextView
                android:id="@+id/activity_main_tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:text="2级"
                android:textColor="@color/user_name"
                android:textSize="18sp" />

            <com.cpic.rabbitfarm.fonts.BoildTextView
                android:id="@+id/activity_main_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/coins"
                android:gravity="center|right"
                android:paddingRight="45dp"
                android:paddingTop="6dp"
                android:text="99"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_title_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/activity_main_iv_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/video" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/activity_main_iv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/message" />

                    <ImageView
                        android:id="@+id/activity_main_message_iv_tis"
                        style="@style/message_item_img_tis"
                        android:visibility="invisible" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/activity_main_iv_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/buy" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/activity_main_iv_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shop" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_ll_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_main_iv_bozhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bozhong" />

            <ImageView
                android:id="@+id/activity_main_iv_chuchong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chuchong" />

            <ImageView
                android:id="@+id/activity_main_iv_shifei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shifei" />

            <ImageView
                android:id="@+id/activity_main_iv_chucang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chucang" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_ll_friends"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/i_haoyoubg"
            android:orientation="vertical"
            android:translationX="106dp" >

            <ListView
                android:id="@+id/activity_main_friend_lv"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/xian"
                android:listSelector="#00000000"
                android:scrollbars="none" >
            </ListView>

            <Button
                android:id="@+id/activity_main_add_friend_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/i_addfri" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>