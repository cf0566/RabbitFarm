<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/popwin_market_iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/c_bg"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >


        <GridView
            android:id="@+id/popwin_market_gv"
            android:layout_width="390dp"
            android:layout_height="225dp"
            android:numColumns="3" 
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:listSelector="#00000000"
            android:layout_marginTop="50dp"
            >
        </GridView>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            >
            <TextView 
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <com.cpic.rabbitfarm.fonts.FishTextView 
                android:id="@+id/popwin_market_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:0"
                android:textSize="15sp"
                android:shadowColor="#3A230A"
                android:textColor="#ffffff"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="4"
                />
            <Button 
                android:id="@+id/popwin_market_btn_ensure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/market_btn_ensure"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>
        
    </LinearLayout>
    <ImageView
        android:id="@+id/popwin_market_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/popwin_market_iv_bg"
        android:layout_marginLeft="165dp"
        android:layout_toRightOf="@+id/popwin_market_iv_title"
        android:src="@drawable/close" />

    <ImageView
        android:id="@+id/popwin_market_iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/popwin_market_iv_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/s_shangcheng" />

</RelativeLayout>