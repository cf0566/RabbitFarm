<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
     >
	
    <ImageView 
        android:id="@+id/popwin_chuchong_lessban_iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b_bgsmall"
        android:layout_centerInParent="true"
        android:padding="8dp"
        />
    
    
    <ImageView
         android:id="@+id/popwin_chuchong_lessban_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/popwin_chuchong_lessban_iv_bg"
        android:layout_alignRight="@+id/popwin_chuchong_lessban_iv_bg"
        android:src="@drawable/close" />
    
    <ImageView 
         android:id="@+id/popwin_chuchong_lessban_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/c_shuliangbufu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />
    <ImageView 
         android:id="@+id/popwin_chuchong_lessban_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b_djfh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/popwin_chuchong_lessban_iv"
        />

</RelativeLayout>
