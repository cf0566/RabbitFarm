<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/popwin_shopping_goods_iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dingdanbg"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <ListView 
            android:id="@+id/popwin_shopping_goods_lv"
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:divider="#FDD979"
            android:dividerHeight="6dp"
            ></ListView>

    </LinearLayout>
    
    
    <ImageView
        android:id="@+id/popwin_shopping_goods_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/popwin_shopping_goods_iv_bg"
        android:layout_marginLeft="110dp"
        android:layout_toRightOf="@+id/popwin_shopping_goods_iv_title"
        android:src="@drawable/close" />

    <ImageView
        android:id="@+id/popwin_shopping_goods_iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_alignTop="@+id/popwin_shopping_goods_iv_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/wdgmtitle" />

</RelativeLayout>