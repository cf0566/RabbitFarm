<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/x_bg2"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_user_info_list_tv_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号：20151234"
            android:textColor="#5A3509" />

        <TextView
            android:id="@+id/item_user_info_list_tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="待支付"
            android:textColor="#5A3509" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_user_info_list_tv_ordertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="下单时间：2015-12-31 16:00"
        android:textColor="#7F5606" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:src="@drawable/spbgsc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/czjljiage"
            android:gravity="center"
            android:text="¥1元/个"
            android:textColor="#643A08"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/czjl_tb" />
    </FrameLayout>

    <TextView
       	android:id="@+id/item_user_info_list_tv_coin_count"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/czjl_tbsl"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="兔币：88"
        android:textColor="#643A08"
        android:textSize="12sp" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        
        <TextView 
            android:id="@+id/item_user_info_list_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共1件商品"
            android:textSize="13sp"
            android:textColor="#5A3508"
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            android:textColor="#5A3508"
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:id="@+id/item_user_info_list_tv_sum_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="88"
            android:textSize="13sp"
            android:textColor="#940B12"
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="13sp"
            android:textColor="#5A3508"
            android:layout_gravity="center_vertical"
            />
        
        <Button 
            android:id="@+id/item_user_info_list_btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_btn_pay"
            android:layout_marginLeft="5dp"
            />
        <Button 
             android:id="@+id/item_user_info_list_btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_btn_del"
            android:layout_marginLeft="5dp"
            />
        
        
        
    </LinearLayout>

</LinearLayout>