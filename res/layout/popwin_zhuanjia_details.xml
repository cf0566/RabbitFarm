<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/popwin_activity_details_iv_bg"
        android:layout_width="340dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:background="@drawable/hyxbg"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/x_bg2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                
                <TextView 
                    android:id="@+id/pop_activity_details_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是活动标题"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/message_toast"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    />
                <ImageView 
                    android:id="@+id/pop_activity_details_iv_icon"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/h_xiqtp"
                    android:scaleType="fitXY"
                    />
                <TextView 
                    android:id="@+id/pop_activity_details_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是活动内容"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/message_toast"
                    android:layout_margin="5dp"
                    android:textSize="11sp"
                    />
                
            </LinearLayout>
        </ScrollView>
        
        
    </LinearLayout>


    <ImageView
        android:id="@+id/popwin_activity_details_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/popwin_activity_details_iv_bg"
        android:layout_marginLeft="90dp"
        android:layout_toRightOf="@+id/popwin_activity_details_iv_activity"
        android:src="@drawable/close" />

    <ImageView
        android:id="@+id/popwin_activity_details_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/popwin_activity_details_iv_bg"
        android:layout_marginRight="90dp"
        android:layout_toLeftOf="@+id/popwin_activity_details_iv_activity"
        android:src="@drawable/back_btn" />

    <ImageView
        android:id="@+id/popwin_activity_details_iv_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/popwin_activity_details_iv_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/huodongxiangqi" />

</RelativeLayout>