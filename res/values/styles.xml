<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/no_back</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>
    
    <style name="publicloadingProgressStyle">
        <item name="android:maxWidth">108dip</item>
        <item name="android:maxHeight">104dip</item>
        <item name="android:indeterminateDrawable">@anim/wb_loading_frame</item>
        <item name="android:minWidth">108dip</item>
        <item name="android:minHeight">104dip</item>
    </style>
    
     <style name="popwin_chuchong_cbox">
         <item name="android:layout_width">90dp</item>
         <item name="android:layout_height">28dp</item>
         <item name="android:button">@drawable/shifei_check_box</item>
         <item name="android:layout_gravity">center</item>
     </style>       
     
     
     <style name="message_item_bg">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">0dp</item>
         <item name="android:layout_weight">1</item>
         <item name="android:background">@drawable/x_bg2</item>
         <item name="android:layout_marginRight">15dp</item>
         <item name="android:layout_marginLeft">15dp</item>
         <item name="android:orientation">horizontal</item>
     </style> 
     
     <style name="message_item_img">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:padding">5dp</item>
         <item name="android:layout_gravity">center_vertical</item>
     </style>    
     
     <style name="message_item_img_tis">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_gravity">right</item>
         <item name="android:src">@drawable/tis_point</item>
         <item name="android:visibility">invisible</item>
     </style>       
            
	               
     <style name="message_item_tv_title">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_marginTop">5dp</item>
         <item name="android:textSize">12sp</item>
         <item name="android:textColor">@color/message_toast</item>
         
     </style>       
    
	               
     <style name="activity_share_tv">
         <item name="android:layout_width">70dp</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:textColor">#666666</item>
         <item name="android:gravity">center</item>
         
     </style>      
      
     <style name="mine_info_tvstyle">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:textSize">16sp</item>
         <item name="android:paddingTop">8dp</item>
         <item name="android:paddingRight">8dp</item>
         <item name="android:paddingLeft">8dp</item>
         <item name="android:textColor">#855319</item>
         
     </style>       
	               
     <style name="message_item_tv_content">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">0dp</item>
         <item name="android:layout_weight">1</item>
         <item name="android:layout_marginBottom">5dp</item>
         <item name="android:textSize">11sp</item>
         <item name="android:textColor">@color/message_toast_content</item>
         <item name="android:layout_marginRight">5dp</item>
         <item name="android:gravity">center_vertical</item> 
     </style>       
       
     
     <style name="my_divide_style">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">0.2dp</item>
         <item name="android:background">#827756</item>
     </style>
     
     <style name="market_tv_style">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:textColor">#5A3509</item>
         <item name="android:textSize">14sp</item>
     </style>
            
     <style name="userinfo_safe_edit_style">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:background">@drawable/shurukuang_g</item>
         <item name="android:layout_marginTop">3dp</item>
         <item name="android:paddingLeft">20dp</item>
         <item name="android:textColorHint">#A65718</item>
         <item name="android:textColor">#A65718</item>
         <item name="android:textSize">12sp</item>
     </style>
    

</resources>
